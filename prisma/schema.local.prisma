datasource db {
  provider = "postgresql" // Замените на нужный провайдер
  url      = env("LOCAL_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/local" // Уникальная папка для локального клиента
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  createdAt DateTime @default(now())
}
